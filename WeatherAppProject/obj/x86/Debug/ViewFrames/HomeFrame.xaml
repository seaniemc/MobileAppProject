<Page x:ConnectionId='1'
    x:Class="WeatherAppProject.ViewFrames.HomeFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherAppProject.ViewFrames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,15,0,0" HorizontalAlignment="Left">
            <TextBlock FontSize="20">Location</TextBlock>
            <TextBlock x:ConnectionId='15' Margin="0,10,0,0" Name="WeatherResultText" FontSize="20"></TextBlock>
        </StackPanel>
        <StackPanel Margin="10,15,0,0" Orientation="Vertical" HorizontalAlignment="Center" Grid.Column="1">
            <TextBlock FontSize="20">Conditions</TextBlock>
            <TextBlock x:ConnectionId='13' Margin="0,15,0,0" FontSize="18" Name="TempText" ></TextBlock>
            <TextBlock x:ConnectionId='14' FontSize="18" Name="DescripitionText" />
            
        </StackPanel>
        <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Grid.Column="2">
                <Image x:ConnectionId='12' Name="TodaysImage" Width="125" Height="125"/>
        </StackPanel>
        <!-- Grid.Row 1 -->
        <StackPanel Margin="10,15,0,0" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0">
            <TextBlock FontSize="22">Pressure</TextBlock>
            <TextBlock x:ConnectionId='11' Margin="0,10,0,0" Name="PressureResultText" FontSize="18"></TextBlock>
        </StackPanel>
        <StackPanel Margin="10,15,0,0" Orientation="Vertical" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">
            <TextBlock FontSize="20">Min/Max Temp</TextBlock>
            <TextBlock x:ConnectionId='9' Margin="0,15,0,0" FontSize="18" Name="MinTempText" />
            <TextBlock x:ConnectionId='10' FontSize="18" Name="MaxTempText" />
        </StackPanel>
        <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2">
            <Image x:ConnectionId='8' Name="PressureImage" Width="125" Height="125"/>
        </StackPanel>
        <!-- Grid.Row 2 -->
        <StackPanel Margin="10,15,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0">
            <TextBlock FontSize="22">Wind Speeds</TextBlock>
            <TextBlock x:ConnectionId='6' Margin="0,10,0,0" Name="WindressureResultText" FontSize="18"></TextBlock>
            <TextBlock x:ConnectionId='7' Name="WindDirectionResultText" FontSize="18"></TextBlock>
        </StackPanel>
        <StackPanel Margin="10,15,0,0" Orientation="Vertical" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1">
            <TextBlock FontSize="20">Sun Rise/ Sun Down</TextBlock>
            <TextBlock x:ConnectionId='4' Margin="0,15,0,0" FontSize="18" Name="SunUpText" />
            <TextBlock x:ConnectionId='5' FontSize="18" Name="SunDownText" />
        </StackPanel>
        <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2">
            <Image x:ConnectionId='3' Name="WindImage" Width="125" Height="125"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" >
            <ProgressRing x:ConnectionId='2' Name="MyProgressRing"
                      Width="100"
                      Height="100"
                      Foreground="Gray"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>

