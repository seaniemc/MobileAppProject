<Page x:ConnectionId='1'
    x:Class="WeatherAppProject.ViewFrames.ForecastFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherAppProject.ViewFrames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#E1EAED" >
        <ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="10,15,0,0" Orientation="Vertical" HorizontalAlignment="Left">
                    <ComboBox x:ConnectionId='28' Name="countryCombo"
                              PlaceholderText="Select Country"
                                                                                         
                                                                               
                              DisplayMemberPath="Name"
                              SelectedValuePath="Code"
                              MinWidth="180">
                    </ComboBox>
                </StackPanel>
                <StackPanel  Margin="0,15,0,0" 
                             Orientation="Vertical" 
                             Grid.Column="1" 
                             HorizontalAlignment="Center">
                    <TextBox x:ConnectionId='26' Name="CityTextBox" 
                             PlaceholderText="Enter City Name"
                             FontSize="18"/>
                    <Button x:ConnectionId='27' Margin="0,10,0,0" Name="ConditionsButton" 
                            Content="FIND"
                            FontStyle="Oblique"
                            Background="#57A4F7"
                                                          >
                    </Button>
                </StackPanel>
                <StackPanel Margin="10,15,0,0" 
                            HorizontalAlignment="Left"
                            Grid.Row="1" Grid.Column="0">
                    <TextBlock x:ConnectionId='24' Margin="0,10,0,0" 
                               Name="Day1Text"
                               TextWrapping="Wrap"
                               FontSize="22"
                               FontFamily="Selawik"
                               FontStyle="Oblique">
                       
                    </TextBlock>
                    <TextBlock x:ConnectionId='25' Margin="0,10,0,0" 
                               Name="Forecast1Text" 
                               TextWrapping="Wrap"
                               FontSize="18">
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Vertical" 
                            HorizontalAlignment="Center" 
                            Grid.Row="1" 
                            Grid.Column="1">
                    <Image x:ConnectionId='23' Name="Weather1Image" 
                           Width="125" 
                           Height="125"/>
                </StackPanel>
                <!-- Grid.Row 2 -->
                <StackPanel Margin="10,15,0,0" 
                            HorizontalAlignment="Left" 
                            Grid.Row="2" Grid.Column="0">
                    <TextBlock x:ConnectionId='21' Margin="0,10,0,0" 
                               Name="Day2Text"
                               TextWrapping="Wrap"
                               FontSize="22"
                               FontFamily="Selawik"
                               FontStyle="Oblique">
                    </TextBlock>
                    <TextBlock x:ConnectionId='22' Margin="0,10,0,0" 
                               Name="Forecast2Text"
                               TextWrapping="Wrap"
                               FontSize="18"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Vertical"  
                            HorizontalAlignment="Center" 
                            Grid.Row="2" Grid.Column="1">
                    <Image x:ConnectionId='20' Name="Weather2Image" 
                           Width="125" 
                           Height="125"/>
                </StackPanel>
                <StackPanel Margin="10,15,0,0" 
                            HorizontalAlignment="Left" 
                            Grid.Row="3" Grid.Column="0">
