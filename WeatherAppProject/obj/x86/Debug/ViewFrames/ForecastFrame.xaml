            </StackPanel>
                <StackPanel Margin="10,15,0,10" 
                            HorizontalAlignment="Left" 
                            Grid.Row="8" Grid.Column="0">
                    <TextBlock x:ConnectionId='3' Margin="0,10,0,0" 
                               Name="Day8Text"
