<Page x:ConnectionId='1'
    x:Class="WeatherAppProject.ViewFrames.Conditions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherAppProject.ViewFrames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:WeatherAppProject.ViewModel"
    mc:Ignorable="d">

    <Grid Background="#E1EAED" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10,15,0,0" Orientation="Vertical" HorizontalAlignment="Left">
            <ComboBox x:ConnectionId='13' Name="countryCombo"
                      
                      PlaceholderText="Select Country"
                                                                                 
                                                                       
                      DisplayMemberPath="Name"
                      SelectedValuePath="Code"
                      MinWidth="125">
            </ComboBox>
        </StackPanel>
        <StackPanel  Margin="0,15,0,0" 
                     Orientation="Vertical" 
                     Grid.Column="2" 
                     HorizontalAlignment="Center">
            <TextBox x:ConnectionId='12' Name="CityTextBox" 
                     PlaceholderText="Enter City Name"
                     FontSize="18"/>
        </StackPanel>
        <StackPanel  Margin="10,15,10,0" Grid.Column="1" Grid.Row="0" 
                     Orientation="Vertical" HorizontalAlignment="Center">
            <Button x:ConnectionId='11'
                    Name="ConditionsButton" 
                    Content=" FIND"
                    FontStyle="Oblique"
                    Background="#57A4F7"
                                                  >
            </Button>
        </StackPanel>
        <StackPanel Margin="10,15,0,0" 
                    HorizontalAlignment="Left"
                    Grid.Row="1" Grid.Column="0">
            <TextBlock  FontSize="22"
                        FontFamily="Selawik"
                        FontStyle="Oblique">Location</TextBlock>
            <TextBlock x:ConnectionId='9' Margin="0,10,0,0" 
                       Name="LocationResultText"
                       TextWrapping="Wrap"
                       FontSize="18">
            </TextBlock>
            <TextBlock x:ConnectionId='10' Margin="0,10,0,0" 
                       Name="CurrentTimeText" 
                       TextWrapping="Wrap"
                       FontSize="18">
            </TextBlock>
        </StackPanel>
        <StackPanel Margin="10,15,0,0" Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" Grid.Column="1">
            <TextBlock  FontSize="22"
                        FontFamily="Selawik"
                        FontStyle="Oblique">Tempature</TextBlock>
            <TextBlock x:ConnectionId='7' Margin="0,15,0,0" 
                       FontSize="18" Name="MinTempText" 
                       TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='8' FontSize="18" 
                       Name="MaxTempText" 
                        TextWrapping="Wrap"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    Grid.Column="2">
            <Image x:ConnectionId='6' Name="PressureImage" 
                   Width="125" 
                   Height="125"
                   />
        </StackPanel>
        <!-- Grid.Row 2 -->
        <StackPanel Margin="10,15,0,0" 
                    HorizontalAlignment="Left" 
                    Grid.Row="2" Grid.Column="0">
            <TextBlock  FontSize="22"
                        FontFamily="Selawik"
                        FontStyle="Oblique">Wind Speeds</TextBlock>
            <TextBlock x:ConnectionId='5' Margin="0,10,0,0" 
                       Name="WindSpeedext" 
                       FontSize="18"
                        TextWrapping="Wrap"></TextBlock>
        </StackPanel>
        <StackPanel Margin="10,15,0,0" Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    Grid.Row="2" Grid.Column="1">
            <TextBlock  FontSize="22"
                        FontFamily="Selawik"
                        FontStyle="Oblique">Precipation</TextBlock>
            <TextBlock x:ConnectionId='4' Margin="0,15,0,0" 
                       FontSize="18" 
                       Name="PrecipText" 
                       TextWrapping="Wrap"/>
        </StackPanel>
        <StackPanel Orientation="Vertical"  
                    HorizontalAlignment="Center" 
                    Grid.Row="2" Grid.Column="2">
            <Image x:ConnectionId='3' Name="WindImage" 
                   Width="125" 
                   Height="125"
                   />
        </StackPanel>
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    Grid.Row="3" 
                    Grid.Column="1" >
            <ProgressRing x:ConnectionId='2' Name="MyProgressRing"
                      Width="100"
                      Height="100"
                      Foreground="Gray"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>

