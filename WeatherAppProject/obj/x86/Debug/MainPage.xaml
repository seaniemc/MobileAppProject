<Page x:ConnectionId='1'
    x:Class="WeatherAppProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherAppProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:WeatherAppProject.ViewModel"
    xmlns:convertors="using:WeatherAppProject.Convertors"
    mc:Ignorable="d">

<!--<Page.Resources>
        <convertors:ObjectsExsistToVisible x:Key="ObjectsExsistToVisible"/>
    </Page.Resources-->

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Left">
            <Button x:ConnectionId='5' Name="WeatherButton" Content="Lets Get the Weather"                            >
            </Button>
            <TextBlock x:ConnectionId='6' Name="WeatherResultText"></TextBlock>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Right">
            <Button x:ConnectionId='4' Name="WeatherCityButton" Content="Lets Get the city Weather"                                >
            </Button>
        </StackPanel>

        <StackPanel Orientation="Vertical" >
            <ListView x:ConnectionId='2'  x:Name="MainList" 
                                                                          
                                                               
              MinWidth="250" Margin="5" Opacity="0.65">
                <ListView.ItemTemplate>
                    <DataTemplate                                       >
                        <ComboBox x:ConnectionId='3'                                          />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </Grid>
</Page>

